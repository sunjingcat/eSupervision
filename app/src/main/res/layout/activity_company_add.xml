<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".business.mine.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="新增企业"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout

            android:id="@+id/ll_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zz.supervision.widget.ItemGroup

                android:id="@+id/et_operatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="经营者名称" />


            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_socialCreditCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="社会信用代码" />

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_licenseNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="许可证编号" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    style="@style/textLeftStyle"
                    android:layout_width="150dp"
                    android:text="企业类型" />

                <TextView
                    android:id="@+id/et_companyType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="请填写"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#333"
                    android:textSize="14dp">

                </TextView>
            </LinearLayout>

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_legalRepresentative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="法定代表人" />
            <com.zz.supervision.widget.ItemGroup
                android:visibility="gone"
                android:id="@+id/et_legalId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="法人身份证号" />

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="住所" />
            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSelect="true"
                android:visibility="gone"
                app:title="地址" />

            <LinearLayout
                android:id="@+id/ll_jingying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/et_businessPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:title="经营场所" />

                <LinearLayout
                    android:id="@+id/ll_businessType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        style="@style/textLeftStyle"
                        android:layout_width="150dp"

                        android:text="主体业态" />

                    <TextView
                        android:id="@+id/et_businessType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableRight="@drawable/image_arrow"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#333"
                        android:textSize="14dp">

                    </TextView>
                </LinearLayout>
                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/et_coldstorage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="企业主体资质"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_businessProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        style="@style/textLeftStyle"
                        android:layout_width="150dp"

                        android:text="经营项目" />

                    <TextView
                        android:id="@+id/et_businessProject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableRight="@drawable/image_arrow"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#333"
                        android:textSize="14dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jtcompanyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/textLeftStyle"
                        android:layout_width="150dp"

                        android:text="具体类型" />

                    <TextView
                        android:id="@+id/et_jtcompanyType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableRight="@drawable/image_arrow"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#333"
                        android:textSize="14dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        style="@style/textLeftStyle"
                        android:layout_width="150dp"

                        android:text="有效期至" />

                    <TextView
                        android:id="@+id/et_endTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableRight="@drawable/image_arrow"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#333"
                        android:textSize="14dp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:title="联系人" />


            <LinearLayout
                android:id="@+id/ll_yp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/ig_qualityContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="质量负责人" />

                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/ig_warehouseAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="仓库地址" />

                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/ig_businessScope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:isSelect="true"
                    app:title="经营范围" />
            </LinearLayout>

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/et_contactInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="联系方式" />
            <LinearLayout
                android:id="@+id/ll_fieldTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    style="@style/textLeftStyle"
                    android:layout_width="150dp"

                    android:text="签发时间" />

                <TextView
                    android:id="@+id/et_fieldTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableRight="@drawable/image_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#333"
                    android:textSize="14dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_loginAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/et_loginAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="登录账号" />
                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="密码" />
                <com.zz.supervision.widget.ItemGroup
                    android:id="@+id/et_passwordCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="确认密码" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    style="@style/textLeftStyle"
                    android:layout_width="150dp"
                    android:text="企业定位" />

                <TextView
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableRight="@drawable/image_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#333"
                    android:textSize="14dp">

                </TextView>
            </LinearLayout>
        </LinearLayout>

            <include
                android:id="@+id/ll_zdgyp"
                android:visibility="gone"
                layout="@layout/layout_zdgyp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/border_radius_3_blue"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>