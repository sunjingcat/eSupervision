<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设备安全监察指令书"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/toolbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/ig_illegalActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="违法行为" />

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/ig_lawContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="违反条款" />

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/ig_accordContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="依据条款" />

            <com.zz.supervision.widget.ItemGroup
                android:id="@+id/ig_reformMeasure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="整改措施" />


            <Button
                android:id="@+id/bt_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/border_radius_3_blue"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>